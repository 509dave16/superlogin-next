{
  "name": "superlogin",
  "version": "0.6.1",
  "description":
    "Powerful authentication for APIs and single page apps using the CouchDB ecosystem which supports a variety of providers.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/colinskow/superlogin.git"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "compile": "babel -x '.ts' src -d lib",
    "copy-types":
      " cd ./tmp && find . -name '*.d.ts' -type f -exec cp --parents {} ../lib/ \\; &&cd ../",
    "precompile": "rimraf lib && tsc",
    "postcompile": "yarn copy-types && rimraf ./tmp/",
    "lint": "yarn tsc && tslint -p tsconfig.json -c tslint.json -t stylish --fix",
    "prettier": "prettier --write 'src/**/*.js'",
    "test": "gulp"
  },
  "keywords": [
    "authentication",
    "login",
    "PouchDB",
    "CouchDB",
    "Cloudant",
    "passport",
    "oauth",
    "Facebook",
    "Twitter",
    "Node",
    "Express"
  ],
  "author": "Colin Skow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colinskow/superlogin/issues"
  },
  "homepage": "https://github.com/colinskow/superlogin",
  "dependencies": {
    "bluebird": "^3.3.4",
    "couch-pwd": "zemirco/couch-pwd",
    "ejs": "^2.3.1",
    "express": "^4.13.3",
    "extend": "^3.0.0",
    "fs-extra": "^4.0.2",
    "lodash.merge": "^4.6.0",
    "nodemailer": "^4.4.0",
    "nodemailer-stub-transport": "^1.0.0",
    "passport": "^0.4.0",
    "passport-http-bearer-sl": "^1.0.1",
    "passport-local": "^1.0.0",
    "pouchdb-node": "^6.4.1",
    "pouchdb-security-helper": "^1.1.1",
    "pouchdb-seed-design": "^0.3.0",
    "pouchdb-upsert": "^2.2.0",
    "redis": "^2.5.2",
    "sofa-model": "^0.2.0",
    "superagent": "^3.8.1",
    "urlsafe-base64": "1.0.0",
    "uuid": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.36",
    "@babel/core": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-typescript": "^7.0.0-beta.36",
    "@types/bluebird-global": "^3.5.3",
    "@types/ejs": "^2.5.0",
    "@types/events": "^1.1.0",
    "@types/express": "^4.11.0",
    "@types/lodash.merge": "^4.6.3",
    "@types/nodemailer": "^4.3.1",
    "@types/nodemailer-stub-transport": "^1.1.4",
    "@types/pouchdb-node": "^6.1.2",
    "@types/pouchdb-upsert": "^2.2.3",
    "@types/redis": "^2.8.4",
    "@types/superagent": "^3.5.6",
    "@types/urlsafe-base64": "^1.0.28",
    "@types/uuid": "^3.4.3",
    "babel-plugin-module-resolver": "^3.0.0",
    "body-parser": "^1.9.2",
    "chai": "^4.1.2",
    "fast-async": "^6.3.0",
    "gulp": "^3.8.6",
    "gulp-jshint": "^2.1.0",
    "gulp-mocha": "^4.3.1",
    "jshint": "^2.9.5",
    "jshint-stylish": "^2.2.1",
    "mocha": "^4.1.0",
    "morgan": "^1.5.2",
    "prettier": "^1.9.2",
    "rimraf": "^2.5.2",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.8.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-language-service": "^0.9.7",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-misc-rules": "^3.2.1",
    "typescript": "^2.6.2"
  }
}
